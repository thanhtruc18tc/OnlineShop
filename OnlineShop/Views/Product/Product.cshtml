    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-7 site-section-heading text-center pt-4">
                <h2>Gợi ý cho bạn</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 block-3">
                <div class="nonloop-block-3 owl-carousel">
                    @foreach (var item in relativeProduct)
                    {
                        if (item.id_product != productDetail.id_product)
                        {
                            <div class="item">
                                <div class="item-entry">
                                    <a href="/product?id=@item.id_product" class="md-height bg-gray d-block">
                                        @foreach (var image in imageRelativeProduct)
                                        {
                                            if (image.id_product == item.id_product)
                                            {
                                                <img src="@image.link" alt="Image" class="image" style="width:100%; height:100%;" />
                                            }
                                        }
                                    </a>
                                    <h2 class="item-title" style="margin-top:15px"><a href="#">@item.name</a></h2>
                                    @if (item.promotionPrice != null)
                                    {
                                        <strong class="item-price"><del>@String.Format("{0:n0}", item.price)đ</del> @String.Format("{0:n0}", item.promotionPrice)đ </strong>
                                    }
                                    else
                                    {
                                        <strong class="item-price">@String.Format("{0:n0}", item.price)đ </strong>
                                    }

                                </div>
                            </div>
                        }
                    }
