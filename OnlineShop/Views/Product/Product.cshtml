@model OnlineShop.Model.ProductDetailPage
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<string> listImage = ViewBag.ListImage;
    var productDetail = Model.productDetail;
    var listSize = Model.listSize;
    var relativeProduct = Model.listRelativeProduct;
    var imageRelativeProduct = Model.listImageRelativeProduct;
}
