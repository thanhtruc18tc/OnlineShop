<!-- Message Modal-->
<div id="modal" class="modal fade">
    <div class="modal-dialog modal-login">
        <div class="modal-content">
            <div class="modal-header">
                <h4 id="message"></h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
        </div>
    </div>
</div>
<!--- body -->>
<div class="site-section">
    <div class="container">
        <div class="row col-md-12">
            <div class="col-md-8 mb-5 oder-1">
                <div class="row mb-5">
                    @foreach (var item in listImage)
                    {
                        <div class="col-lg-6 col-md-6 item-entry" style="margin-bottom:20px; margin-left:-10px">
                            <a href="#" class="md-height d-block">
                                <img src="@item" alt="Image" class="img-fluid">
                            </a>
                        </div>
                    }
                </div>
            </div>
            <div class="col-md-4">
                <h2 class="text-black">@productDetail.name</h2>
                <p class="text-justify" style="font-size:14px;">@productDetail.description</p>
                <p class="d-flex justify-content-center">
                    @if (productDetail.promotionPrice != null)
                    {
                        <strong class="text-primary h4"><del style="color:grey">@String.Format("{0:n0}", productDetail.price)đ</del> @String.Format("{0:n0}", productDetail.promotionPrice)đ </strong>
                    }
                    else
                    {
                        <strong class="text-primary h4">@String.Format("{0:n0}", productDetail.price)đ </strong>
                    }
                </p>
                @using (Html.BeginForm("Add", "Cart", FormMethod.Post)) { 
                    <div class="mb-1 d-flex justify-content-center">
                        <input type="hidden" value="@productDetail.id_product" name="id"/>
                        @foreach (var item in listSize)
                        {
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" class="custom-control-input" value="@item.id_size" id="@item.id_size" name="size">
                                <label class="custom-control-label" for="@item.id_size">@item.name</label>
                            </div>
                        }
                        @if (listSize.Count() == 0)
                        {
                            <div><p>Hết hàng</p></div>
                        }

                    </div>
                    <div class="mb-5 d-flex justify-content-around" style="margin-top:20px">
                        <div class="input-group mb-3" style="max-width: 120px;">
                            <div class="input-group-prepend">
                                <button class="btn btn-outline-primary js-btn-minus" id="btn-minus" type="button">&minus;</button>
                            </div>
                            <input type="text" id="quantity" class="form-control text-center" value="1" name="quantity" placeholder="" aria-label="Example text with button addon" aria-describedby="button-addon1">
                            <div class="input-group-append">
                                <button class="btn btn-outline-primary js-btn-plus" type="button">&plus;</button>
                            </div>
                        </div>
                    </div>
                   
                    
                        <button type="@(listSize.Count() != 0 ? "submit": "button")" id="@(listSize.Count() != 0 ? "btn-add" : "")" class="buy-now btn btn-sm height-auto px-4 py-3 @(listSize.Count() != 0 ? "btn-danger": "btn-secondary") d-flex justify-content-around" style="color:white; width:100%">Thêm vào giỏ</button>
                        <p>@*<a href="/add?id=@productDetail.id_product&size=" id="btn-add" class="buy-now btn btn-sm height-auto px-4 py-3 btn-danger d-flex justify-content-around" style="color:white">Thêm vào giỏ</a>*@</p>
                    
                }
            </div>
        </div>
    </div>
</div>
