                                <li><a href="#">Nam</a></li>
                                <li><a href="#">Nữ</a></li>
                                <li><a href="/Home/Contact">Liên hệ</a></li>
                            </ul>
                        </nav>
                    </div>
                    <div class="icons">
                        <a href="#" class="icons-btn d-inline-block js-search-open"><span class="icon-search"></span></a>
                        <a href="/Home/Cart" class="icons-btn d-inline-block bag">
                            <span class="icon-shopping-bag"></span>
                            <span class="number">2</span>
                        </a>
                        <span style="margin-left: 15px">
                            <span class="icon-user-o dropdown-toggle" data-toggle="dropdown" aria-haspopup="true"></span>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="/Account/LoginIndex">Đăng nhập</a>
                                <a class="dropdown-item" href="/Account/SignUpIndex">Đăng kí</a>
                            </div>
                        </span>
                        
                        <a href="#" class="site-menu-toggle js-menu-toggle ml-3 d-inline-block d-lg-none"><span class="icon-menu"></span></a>
                    </div>
                </div>
            </div>
        </div>
        <div id="page">

            @RenderBody()
        </div>
        <footer class="site-footer custom-border-top">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-lg-3 mb-4 mb-lg-0">
                        <h3 class="footer-heading mb-4">Quảng cáo</h3>
                        <a href="#" class="block-6">
                            <img src="~/Assets/images/about_1.jpg" alt="Image placeholder" class="img-fluid rounded mb-4">
