@model  Model.Helper.ProductView
@{
    List<Model.EF.Category> listCat = (List<Model.EF.Category>)ViewBag.Categories;
    List<SelectListItem> selectList = new List<SelectListItem>();
    foreach (var cat in listCat)
    {
        selectList.Add(new SelectListItem { Value = cat.id_category+"" , Text = cat.name });
    }
    String action = ViewBag.Action;
    ViewBag.Title = action + " - Admin ShopMax";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    int i_img = 2;
}
@section jsFooter{
    <script>
        var i = 2
        var images = document.getElementById("images")
        function addField() {
            if (i <= 2) {
                i = 2
            }
            if (i>4) {
                return
            }
            var input = document.createElement("div")
            input.classList = "form-group"
            input.innerHTML = `<label class="col-md-12">Link hình ảnh @i_img</label>
                                                            <div class="col-md-12">
                                                                @Html.TextBoxFor(model => model.Images[i_img], new { @type = "url", @class = "form-control form-control-line", @required = "required", @autocomplete = "off" })
                                                            </div>`
            images.appendChild(input)
            i++
        }
        function rmField() {
            if (i > 2) {
                images.removeChild(images.lastChild)
                i--
            }
        }
    </script>
}

